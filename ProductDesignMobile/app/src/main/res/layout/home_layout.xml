<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:background="@color/colorPalettonLight">

    <RelativeLayout
        android:background="@drawable/rounded_background_primary"
        android:layout_alignParentTop="true"
        android:padding="20dp"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/homeImageViewIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp" />

        <TextView
            android:id="@+id/homeTextViewHeader"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:textSize="30sp"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:text="@string/homeTextViewHeader"/>

        <TextView
            android:id="@+id/homeTextViewGuide"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/homeTextViewHeader"
            android:layout_marginTop="10dp"
            android:textSize="15sp"
            android:textColor="@color/colorPalettonDark"
            android:text="Welcome, start using NoticeMe by filling user information and adding profile picture."/>

        <TextView
            android:id="@+id/homeTextViewGuide2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_below="@+id/homeTextViewGuide"
            android:layout_marginTop="5dp"
            android:textColor="@color/colorPalettonDark"
            android:text="To find Settings Screen, swipe from left edge to right!"/>

    </RelativeLayout>



</RelativeLayout>