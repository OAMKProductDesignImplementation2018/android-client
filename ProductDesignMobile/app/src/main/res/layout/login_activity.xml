<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingLeft="40dp"
    android:paddingRight="40dp"
    android:background="@color/colorPrimary"
    tools:context=".LoginActivity">

    <TextView
        android:id="@+id/loginTextViewSignUp"
        android:layout_below="@+id/loginButtonLogin"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryLightest"
        android:text="@string/loginTextViewSignUp" />

    <Button
        android:id="@+id/loginButtonSignUp"
        android:background="@color/colorPrimaryLightest"
        android:layout_below="@id/loginTextViewSignUp"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="@string/loginButtonSignUp"
        android:textColor="@color/colorPrimaryDarkest"/>

    <Button
        android:id="@+id/loginButtonLogin"
        android:background="@color/colorPrimaryLightest"
        android:layout_below="@+id/loginEditTextPassword"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textColor="@color/colorPrimaryDarkest"
        android:layout_centerHorizontal="true"
        android:text="@string/loginButtonLogin" />

    <EditText
        android:id="@+id/loginEditTextPassword"
        android:background="@color/white"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorPrimaryDarkest"
        android:autofillHints="password"
        android:hint="@string/loginTextViewPassword"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/loginEditTextUsername"
        android:background="@color/white"
        android:autofillHints="username"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_above="@+id/loginEditTextPassword"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorPrimaryDarkest"
        android:hint="@string/loginTextViewUsername"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/loginTextViewHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:textAlignment="center"
        android:fontFamily="monospace"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:text="@string/app_name" />

    <TextView
        android:id="@+id/loginTextViewGuide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/loginTextViewHeader"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:layout_marginTop="10dp"
        android:text="@string/loginTextViewGuide" />

</RelativeLayout>