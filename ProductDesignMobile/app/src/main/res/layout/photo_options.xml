<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/colorPalettonLight"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:background="@drawable/rounded_background_primary"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:padding="20dp">

        <ImageView
            android:id="@+id/photoImageViewIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:background="@android:drawable/ic_menu_camera" />

        <TextView
            android:id="@+id/photoTextViewHeader"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:textSize="30sp"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:text="@string/photoTextViewHeader"/>

        <ImageView
            android:id="@+id/imageViewProfilePicture"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/photoTextViewHeader"
            android:layout_above="@id/photoTextViewStatus"
            android:layout_marginVertical="10dp"
            android:src="@drawable/nophoto"/>

        <TextView
            android:id="@+id/photoTextViewStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/buttonAddPictureFile"
            android:layout_marginBottom="5dp"
            android:textAlignment="center"
            android:text="No faces Detected"/>

        <Button
            android:id="@+id/buttonAddPictureFile"
            android:background="@drawable/rounded_button"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="5dp"
            android:layout_above="@id/buttonAddPhotoCamera"
            android:text="Add profile image from files"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/buttonAddPhotoCamera"
            android:background="@drawable/rounded_button"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="5dp"
            android:layout_above="@id/buttonSavePicture"
            android:text="Use camera to take profile image"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/buttonSavePicture"
            android:background="@drawable/rounded_button"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:text="@string/pictureSaveButton"
            android:textColor="@color/white"/>

    </RelativeLayout>
</RelativeLayout>